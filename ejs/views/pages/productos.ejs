<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


    <title>Handlebar form</title>

</head>

<body>
    <br>

    <div class="container">
        <% if (listaProductos.length==0) { %>
            <h1>No hay mas productos</h1>
            <a class="btn btn-primary m-3" href="/">Ir al menu</a>
            <% } else { %>



                <div class="d-flex p-2  flex-wrap">

                    <% listaProductos.forEach((val)=> { %>
                        <div class="card m-2">
                            <img src=<%=val.thumbnail %> class="card-img-top imagen" style="width: 18rem; margin:
                            1rem;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= val.title %>
                                </h5>
                                <p class="card-text">$<%= val.price %>
                                </p>
                            </div>
                        </div>
                        <a class="btn btn-primary form-control " href="/">Ir al menu</a>
                        <% }); %>

                </div>
                <% } %>


                    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
                        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
                        crossorigin="anonymous"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
                        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
                        crossorigin="anonymous"></script>
</body>

</html>