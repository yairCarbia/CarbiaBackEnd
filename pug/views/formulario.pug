
h1(class="m-3")="Metodo POST"
        form(class="m-3 form-control-lg bg-dark" method="POST" action="http://localhost:8080/productos")

            div(class="mb-3 mt-3") 
                input(class="form-control" type="text" name="title" placeholder="nombre" )
            

            div(class="mb-3")
                input(class="form-control" type="number" name="price" placeholder="precio") 
         

            div(class="mb-3")
                input(class="form-control" type="text" name="thumbnail" placeholder="ruta de imagen") 
            button(type="submit" class="btn btn-primary mb-3" href="/productos")="Agregar producto"