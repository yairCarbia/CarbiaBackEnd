{{#if products.length}}
  <h1>Listado de productos</h1>
  <div class='table-responsive'>
    <table class='table table-dark'>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
      {{#each products}}
        <tr>
          <td>{{this.title}}</td>
          <td>${{this.price}}</td>
          <td><img width='50' src={{this.thumbnail}} alt='Image not found' /></td>
        </tr>
      {{/each}}
    </table>
  </div>
{{else}}
  <h3 class='alert alert-warning mt-2'>{{products.error}}</h3>
{{/if}}